<%- include("../includes/head.ejs") %> 
    <%- include("../includes/navigation.ejs") %> 

    <div class="row py-5 px-4">
        <div class="col-xl-4 col-md-6 col-sm-10 mx-auto">

            
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 bg-dark">
                    <% if(errorMessage) { %> 
                        <div class="alert alert-danger mt-4" role="alert">
                            <p class="p-1 mt-2"><%= errorMessage %></p>
                        </div>
                    <% } %> 
                    <div class="media align-items-end profile-header">
                        <div class="profile mr-3">
                            <img src="/<%= user.profilePhoto %>" alt="..." width="130" class="rounded mb-1 img-thumbnail">
                            <form action="/add-friend" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" name="friendId" value="<%= user._id %>">
                                
                                
                                <% const friendsListIndex = userId.friends.list.findIndex(frd => { %> 
                                    <% return frd.friendId.toString() === user._id.toString() %> 
                                <% }) %> 
                                <% if(!friendsListIndex) { %> 
                                    <button type="submit" class="btn btn-dark btn-sm btn-block">DELETE FRIEND</button>
                                <% } %>
                                <% if(friendsListIndex) { %>
                                    <button type="submit" class="btn btn-dark btn-sm btn-block">ADD FRIEND</button>
                                <% } %>
                                

                            </form>
                        </div>
                        <div class="media-body mb-5 text-white">
                            <h4 class="mt-0 mb-0"><%= user.name %></h4>
                        </div>
                    </div>
                </div>

                <div class="bg-light p-4 d-flex justify-content-end text-center">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block"><%= posts.length %></h5>
                            <small class="text-muted"><i class="fa fa-picture-o mr-1"></i>Posts</small>
                        </li>
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block"><%= user.friends.list.length %> </h5>
                            <small class="text-muted"> <i class="fa fa-user-circle-o mr-1"></i>Friends</small>
                        </li>
                    </ul>
                </div>
                
                <div class="py-4 px-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0">Posts</h5>
                    </div>
                    <% if(posts.length > 0) { %>
                        <% for(let post of posts) { %>  
                            <div class="row">
                                <div class="col-lg-12 mb-2 pr-lg-1">
                                    <% if(post.imageUrl) { %> 
                                        <img src="/<%= post.imageUrl %>" class="img-fluid rounded shadow-sm">
                                    <% } else { %>
                                        <div></div>
                                    <% } %> 
                                    <h6><%= post.description %></h6>
                                </div>
                            </div>
                            <hr>
                        <% } %> 
                    <% } %> 
                </div>
            </div>

        </div>
    </div>

<%- include("../includes/head.ejs") %>