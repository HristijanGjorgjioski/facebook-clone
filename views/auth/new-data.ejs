<%- include('../includes/head.ejs') %> 

</head>
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100 text-center">
            <div class="col-10 col-md-8 col-lg-4">
                <% if(errorMessage) { %> 
                    <div class="alert alert-danger mt-4" role="alert">
                        <p class="p-1 mt-2"><%= errorMessage %></p>
                    </div>
                <% } %>
                <form action="/new-data" method="POST">
                    <div class="form-group mt-2">
                        <label for="name">Name</label>
                        <input class="form-control text-center" type="text" name="name" id="name" value="<%= oldInput.name %>" minlength="6">
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">E-mail</label>
                        <input class="form-control text-center" type="email" name="email" id="email" value="<%= oldInput.email %>">
                    </div>
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="passwordToken" value="<%= dataToken %>">
                    <input type="hidden" name="_csrf" id="" value="<%= csrfToken %>">
                    <button class="btn btn-md btn-primary text-center" type="submit" name="change-data">Update data</button>
                </form>
            </div>
        </div>
    </div>
<%- include('../includes/end.ejs') %>