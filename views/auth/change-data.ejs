<%- include('../includes/head.ejs') %> 

</head>
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100 text-center">
            <div class="col-10 col-md-8 col-lg-4">
                <% if(errorMessage) { %> 
                    <div class="alert alert-danger mt-4" role="alert">
                        <p class="p-1 mt-2"><%= errorMessage %></p>
                    </div>
                <% } %> 
                <form action="/change-data" method="POST">
                    <div class="form-group mt-2">
                        <label for="email">E-mail</label>
                        <input class="form-control text-center" type="email" name="email" id="email">
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-md btn-primary text-center" type="submit" name="send-email">Send E-mail</button>
                    <p>You will recive an email within a minute. If you do not recive then try again and check your email</p>
                </form>
            </div>
        </div>
    </div>
<%- include('../includes/end.ejs') %>