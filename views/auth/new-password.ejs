<%- include('../includes/head.ejs') %> 

</head>
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100 text-center">
            <div class="col-10 col-md-8 col-lg-4">
                <% if(errorMessage) { %> 
                    <div class="alert alert-danger mt-4" role="alert">
                        <p class="p-1 mt-2"><%= errorMessage %></p>
                    </div>
                <% } %> 
                <form action="/new-password" method="POST">
                    <div class="form-group mt-2">
                        <label for="password">Password</label>
                        <input class="form-control text-center" type="password" name="password" id="password" minlength="6">
                    </div>
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-md btn-primary text-center" type="submit" name="update-password">Update password</button>
                    <!-- <p>Make sure that your password has at least 6 characters, because you will not be able to login!</p> -->
                </form>
            </div>
        </div>
    </div>
<%- include('../includes/end.ejs') %>